<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BenchBase">
		<defName>GCS_Stove</defName>
		<label>Geyser stove</label>
		<description>A Stove with geyser. Must be placed on a steam geyser.</description>
		<thingClass>Building_WorkTable_HeatPush</thingClass>
		<graphicData>
			<texPath>Things/Building/GCS_Stove</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,4)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<cornerBL>Damage/Corner</cornerBL>
			</damageData>
		</graphicData>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>		
		<stuffCategories>
			<li>Stony</li>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>200</costStuffCount>
		<costList>
			<Steel>20</Steel>
			<Silver>50</Silver>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Beauty>20</Beauty>
			<WorkToBuild>6000</WorkToBuild>
			<MaxHitPoints>220</MaxHitPoints>
			<Flammability>0.0</Flammability>
			<WorkTableWorkSpeedFactor>1.2</WorkTableWorkSpeedFactor>
		</statBases>
		<size>(4,4)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>90</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-2)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
			<li>CookMealSimple</li>
			<li>CookMealFine</li>
			<li>CookMealLavish</li>
			<li>CookMealSurvival</li>
			<li>Make_Pemmican</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
		<!-- 
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>0</fuelConsumptionRate>
				<fuelCapacity>1.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			-->
			<li Class="CompProperties_HeatPusher">
				<heatPerSecond>2</heatPerSecond>
				<heatPushMaxTemperature>18</heatPushMaxTemperature>
			</li>
		</comps>
		<building>
			<isMealSource>true</isMealSource>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<researchPrerequisites>
			<li>GeyserCookingone</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		<placeWorkers>
			<li>PlaceWorker_OnSteamGeyser</li>
		</placeWorkers>
	</ThingDef>

